type User {
  id: ID! @id
  userName: String! @unique
  email: String! @unique
  firstName: String @default(value:"")
  lastName: String
  bio: String
  post: [Post!]!
  likes: [Like!]!
  comments: [Comment!]!
  followers: [User!]! @relation(name: "FollowRelation")
  following: [User!]! @relation(name: "FollowRelation")
  rooms: [Room!]!
  loginSecret: String
}

type Post{
  id: ID! @id
  files: [File!]!
  location: String
  caption: String!
  user: User!
  likes: [Like!]!
  comment: [Comment!]!
}

type Like{
  id: ID! @id
  user: User!
  post: Post!
}

type Comment{
  id: ID! @id
  text: String!
  user: User!
  post: Post!
}

type File {
  id: ID! @id
  url: String!
  post: Post!
}

type Room {
  id: ID! @id
  particpants: [User!]!
  message: [Message!]!
}

type Message{
  id: ID! @id
  text: String!
  from: User! @relation(name:"From")
  to: User!@relation(name:"To")
  room: Room!
}

type UserProfile {
  id: ID! @id
  user: User!
  posts: [Post]!
}